.swipe{
    padding: 20rpx;
    margin: 20rpx auto;
    margin-bottom: 30rpx;
    width: 96%;
}
page{
    height: auto;
    width: 96%;
    margin: auto;
}
.goods-box{
    display: flex;
    padding: 20rpx;
    background: white;
    box-sizing: border-box;
    border-radius: 6rpx;
}
.goods-box .img-box{
    width: 160rpx;
    height: 160rpx;
    overflow: hidden;
}
.goods-box .img-box image{
    width: 100%;
    height: 100%;
}
.goods-box .goods-title{
    width: 420rpx;
    font-size: 24rpx;
    color: #000;
    margin-left: 24rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display:-webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}
.goods-box .goods-price{
    text-overflow: ellipsis;
    white-space: nowrap;
    width: 420rpx;
    /* width: 280rpx; */
    overflow: hidden;
    font-size: 24rpx;
    padding: 24rpx 0;
    color:#e64340;
    margin-left: 24rpx;
}
.goods-price text{
    margin-right: 10rpx;
}