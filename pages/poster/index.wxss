page{
    background-color: #fff;
}
image{
    width: 100%;
    height: 100%;
}
.img{
    margin: auto;
    padding: 50rpx 0;
    width: 180rpx;
}
.input{
    margin: 0 20rpx 30rpx 20rpx;
    padding: 10rpx 2rpx;
    border-radius: 6rpx;
    line-height: 60rpx;
    border-bottom: 1rpx solid #f1f1f1;
}
.item{
    margin: 0 20rpx 30rpx 20rpx;
    border-bottom: 1rpx solid #f1f1f1;
    display: flex;
    justify-content: space-between;
    padding-bottom: 30rpx;
}

.item_left{
    line-height: 48rpx;
}
.item_right{
    width: 200rpx;
}
.item_left_name{
    width: 480rpx;
    font-size: 34rpx;
    font-weight: 550;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}
.item_left_tag{
    width: 480rpx;
    font-size: 26rpx;
    color: #9a9898;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}
.item_left_its{
    padding: 14rpx 0;
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
}
.item_left_its_img{
    width: 40rpx;
}
.item_left_its_view{
    justify-content: space-between;
    display: flex;
    width: 96%;
    line-height: 55rpx;
    align-items: center;
}
.item_price{
    color: red;
    font-size: 42rpx;
    font-weight: 550;

}

.item_right_view{
    font-size: 18rpx;
    text-align: center;
    padding-top: 6rpx;
    color: #9a9898;
}
.item_more{
    margin: 0 20rpx 30rpx 20rpx;
    border-bottom: 1rpx solid #f1f1f1;
    padding-bottom: 25rpx;
}
.item_more_img{
    margin: auto;
    display: block;
    width: 220rpx;
}

.wux_input_left{
    height: 54rpx;
    width: 66% !important;
    border-bottom: 1rpx solid #f1f1f1;
}
.wux_input_right{
    height: 54rpx;
    width: 30% !important;
    border-bottom: 1rpx solid #f1f1f1;
    color: red;
    margin-right: 10rpx;
}
.item_qian{
    font-size: 24rpx;
    font-weight: 500;
    color: red;
    line-height: 30rpx;
}
.btn{
    background: #e44f39;
    position: fixed;
    width: 100%;
    height: 100rpx;
    font-size: 38rpx;
    font-weight: 550;
    text-align: center;
    letter-spacing: 4rpx;
    line-height: 100rpx;
    left: 0;
    bottom: 0;
    color: white;
    z-index: 9;
}
.item_left_nameDiv{
    display: flex;
    justify-content: space-between;
    width: 96%;
}