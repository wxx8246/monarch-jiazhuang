page{
    width: 100vw;
    height: 100vh;
    display: flex;
    flex-direction: column;
}
.searchBar{
    margin: auto;
    width: 94%;
    padding: 4rpx 20rpx;
    z-index: 99;
    background:#F2f2f2;
}
.searchBar-button{
    height: 40rpx;
}
.searchBar-icon{
    vertical-align: inherit;
    margin-right: 8rpx;
}

.category{
    flex: 1;
    display: flex;
    height: 100%;
}

.category-left {
    width: 18%;
    height: 100%;
    font-size: 24rpx;
}
.category-left-item{
    /* text-align-last:justify;
	text-align:justify; */
    width: 100%;
    height:120rpx;
    line-height: 120rpx;
    padding-left: 14rpx;
    background-color: #f9f8f8;
}
.categoryKey{
    border-left: 6rpx solid red;
    background-color: #fff !important;
    color: red;
    padding-left: 8rpx;
}
.category-right {
    height: 100%;
    background: #fff;
    width: 82%;
}
.category-right-item{
    width: 100%;
}

.goodsList{
    background: #fff;
}
.goodsList-name{
    padding: 24rpx 10rpx;
    font-size: 40rpx;
    font-weight: 600;
    width: 30%;
}
.goodsList-pic{
    height: 270rpx;
    padding: 10rpx 24rpx;
}
.goodsList-pic image{
    width: 100%;
    height: 100%;
    border-radius: 5px;
}
.goods-container{
    display: flex;
    justify-content: space-between;  
    flex-wrap:wrap;
    box-sizing: content-box;
    padding: 24rpx;
    background-color: #fff;
}
.goods-box{
    /* width: 339rpx;
    height: 472rpx;
    background-color: #f9f8f8;
    overflow: hidden;
    margin-bottom: 24rpx;
    border-radius:5px;
    border: 1px solid #f3f3f3; */
    display: flex;
    padding: 20rpx;
    margin-bottom: 10rpx;
    width: 100%;
}
.goods-box .img-box{
    /* width: 339rpx;
    height: 339rpx; */
    width: 160rpx;
    height: 160rpx;
    overflow: hidden;
}
.goods-box .img-box image{
    width: 100%;
    height: 100%;
}
.goods-box .goods-title{
    width: 300rpx;
    font-size: 24rpx;
    color: #000;
    margin-left: 24rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    height: 60rpx;
    line-height: 33rpx;
}
.goods-box .goods-price{
    text-overflow: ellipsis;
    white-space: nowrap;
    width: 300rpx;
    overflow: hidden;
    font-size: 24rpx;
    color:#797271;
    margin-left: 24rpx;
}
.goods-price_price{
    display: flex;
    justify-content: space-between;
}
.goods-price_price image{
    width: 30rpx;
}
.goods-price>text{
    display: block;
    margin-right: 10rpx;
    height: 61rpx;
    line-height: 46rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}
.red{
    color: red;
    font-weight: 600;
}
.noMore{
    text-align: center;
    color: #b7b7b7;
    font-size: 22rpx;
    height: 60rpx;
    line-height: 60rpx;
}



